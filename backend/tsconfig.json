{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                         
    "lib": ["ES2020"],                          
    "module": "CommonJS",                       
    "moduleResolution": "Node",                 

    /* Paths and Output */
    "rootDir": "./src",                           
    "outDir": "dist",                           
    "baseUrl": "./",                            

    /* Type Checking */
    "strict": true,                             
    "strictNullChecks": true,                   
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   

    /* Node/JS interop */
    "resolveJsonModule": true,                  
    "skipLibCheck": true,                       

    /* Source Maps (for debugging) */
    "sourceMap": true,                          
    "inlineSources": true,
    
    /* Types */
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],                           
  "exclude": ["node_modules", "dist"]           
}